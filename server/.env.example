# Application
NODE_ENV=development
HTTP_PORT=3000
LOG_LEVEL=debug
RELEASE=0.1.0

# Database (Postgres example) - used by Prisma
DATABASE_URL=postgresql://<db_user>:<db_password>@<host>:5432/<db_name>?sslmode=require

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
# Comma-separated allowed origins (for dev include your frontend localhost ports)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Sentry (optional) - leave blank in development
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0
